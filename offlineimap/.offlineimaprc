[Account Pobox]
autorefresh = 5
localrepository = LocalPobox
remoterepository = RemotePobox

[Repository LocalPobox]
type = Maildir
localfolders = ~/Mail/Pobox

[Repository RemotePobox]
type = IMAP
ssl = yes
realdelete = no
remotehost = imap.googlemail.com
remoteuser = schelcj@gmail.com
remoteport = 993
folderfilter = lambda foldername: not re.search('(^Personal|Receipts|Travel|Work|All Mail|Important|Spam|Starred|Trash|Drafts|Backup|Priority|Misc|Notes|Scheduled)',foldername)
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Account Umich]
